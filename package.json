{
  "name": "squak",
  "description": "Setup and build modern Web Servers in TypeScript.",
  "version": "0.0.0-development",
  "repository": "github:tobua/squak",
  "license": "MIT",
  "author": "Matthias Giger",
  "scripts": {
    "build": "padua build",
    "postinstall": "skip-local-postinstall dist/installation.js",
    "start": "padua watch",
    "test": "padua test --forceExit"
  },
  "padua": {
    "entry": [
      "installation.ts"
    ],
    "esbuild": {
      "platform": "node",
      "format": "esm"
    }
  },
  "dependencies": {
    "@types/jest": "^27.4.1",
    "@typescript-eslint/eslint-plugin": "^5.15.0",
    "@typescript-eslint/parser": "^5.15.0",
    "deep-for-each": "^3.0.0",
    "deepmerge": "^4.2.2",
    "eslint": "^8.11.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^16.1.3",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.25.4",
    "fast-glob": "^3.2.11",
    "is-ci": "^3.0.1",
    "jest": "^27.5.1",
    "lodash.unset": "^4.5.2",
    "logua": "^2.1.4",
    "nodemon": "^2.0.15",
    "pakag": "^2.6.0",
    "parse-gitignore": "^1.0.1",
    "rimraf": "^3.0.2",
    "skip-local-postinstall": "^2.0.2",
    "ts-jest": "^27.1.3",
    "typescript": "^4.6.2"
  },
  "type": "module",
  "sideEffects": true,
  "main": "dist/index.js",
  "exports": {
    "default": "./dist/index.js"
  },
  "bin": "dist/index.js",
  "source": "index.ts",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "configuration/*",
    "!configuration/*.ts"
  ],
  "keywords": [
    "backend",
    "server",
    "build-tool",
    "node",
    "typescript"
  ],
  "devDependencies": {
    "enhanced-resolve": "^5.9.2",
    "jest-fixture": "^3.0.0",
    "padua": "^0.5.4",
    "tcp-port-used": "^1.0.2"
  },
  "prettier": "padua/configuration/.prettierrc.json",
  "eslintConfig": {
    "extends": "./node_modules/padua/configuration/eslint.cjs"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsconfig": "./tsconfig.json"
      }
    },
    "modulePathIgnorePatterns": [
      "/template/",
      "/test/fixture/",
      "/script/"
    ],
    "resolver": "<rootDir>/test/jest-resolver.cjs",
    "transform": {
      "^.+\\.tsx?$": "ts-jest",
      "^.+\\.jsx?$": [
        "babel-jest",
        {
          "configFile": "./node_modules/padua/configuration/.babelrc"
        }
      ]
    },
    "transformIgnorePatterns": [
      "/node_modules/(?!jest-fixture|logua|pakag|synec).*/"
    ]
  },
  "engines": {
    "node": ">= 14"
  }
}
