{
  "name": "squak",
  "description": "Setup and build modern Web Servers in TypeScript.",
  "version": "0.1.0",
  "repository": "github:tobua/squak",
  "license": "MIT",
  "author": "Matthias Giger",
  "scripts": {
    "test": "padua test",
    "start": "padua watch",
    "build": "padua build",
    "postinstall": "node dist/installation.js"
  },
  "dependencies": {
    "@types/jest": "^26.0.20",
    "@typescript-eslint/parser": "^4.17.0",
    "deep-for-each": "^3.0.0",
    "deepmerge": "^4.2.2",
    "eslint": "^7.22.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-config-prettier": "^8.1.0",
    "fast-glob": "^3.2.5",
    "is-ci": "^3.0.0",
    "jest": "^26.6.3",
    "lodash.unset": "^4.5.2",
    "logua": "^2.1.4",
    "pakag": "^2.3.0",
    "parse-gitignore": "^1.0.1",
    "ts-jest": "^26.5.3"
  },
  "type": "module",
  "main": "dist/index.js",
  "sideEffects": false,
  "bin": "dist/index.js",
  "source": "index.ts",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@types/deepmerge": "^2.2.0",
    "jest-fixture": "^1.0.0",
    "padua": "^0.3.0"
  },
  "prettier": "padua/configuration/.prettierrc.json",
  "eslintConfig": {
    "extends": "./node_modules/padua/configuration/eslint.cjs"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsconfig": "./tsconfig.json"
      }
    },
    "modulePathIgnorePatterns": [
      "/template/",
      "/test/fixture/",
      "/script/"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest",
      "^.+\\.jsx?$": [
        "babel-jest",
        {
          "configFile": "./node_modules/padua/configuration/.babelrc"
        }
      ]
    },
    "transformIgnorePatterns": [
      "node_modules/cint"
    ]
  },
  "engines": {
    "node": ">= 14"
  }
}